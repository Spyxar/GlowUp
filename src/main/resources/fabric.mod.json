{
  "schemaVersion": 1,
  "id": "glowup",
  "version": "${version}",
  "name": "GlowUp",
  "description": "A mod that highlights specific ground items",
  "authors": [
    "Spyxar"
  ],
  "contributors": [
    "CreepilyCreep"
  ],
  "contact": {
    "homepage": "https://github.com/Spyxar",
    "sources": "https://github.com/Spyxar/GlowUp",
    "issues": "https://github.com/Spyxar/GlowUp/issues"
  },
  "license": "MIT",
  "icon": "assets/glowup/icon.png",
  "environment": "client",
  "entrypoints": {
    "client": [
      "com.spyxar.glowup.GlowUpMod"
    ],
    "modmenu": [
      "com.spyxar.glowup.config.ModMenuIntegration"
    ]
  },
  "mixins": [
    "glowup.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=${loader_version}",
    "minecraft": "~${minecraft_version}",
    "java": ">=21"
  },
  "suggests": {
    "modmenu": "*",
    "cloth-config": "*"
  },
  "custom": {
    "modmenu": {
      "links": {
        "modmenu.discord": "https://discord.gg/EPFcHVjK8p"
      }
    }
  }
}